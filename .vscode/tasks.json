{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "npx tsc",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - tsconfig.json"
		},
		{
			"type": "shell",
			"command": "npx tsc --watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: watch - tsconfig.json"
		},
	]
}
