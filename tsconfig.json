{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types",
		],
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		".next/types/**/*.ts",
	],
	"exclude": [
		"node_modules",
	],
}
